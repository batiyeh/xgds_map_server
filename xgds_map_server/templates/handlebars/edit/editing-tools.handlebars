<div class="row">
    <div class="col-md-6" id="map-buttons" data-toggle="buttons-radio" >
        <div class="btn-group" role="group" data-toggle="buttons">
        	<label class="btn btn-primary active" name="addType" id="btn-polygon" data="Polygon">
        		<input type="radio"  autocomplete="off" checked/>Polygon
        	</label>
        	<label class="btn btn-primary" name="addType" id="btn-point" data="Point">
        		<input type="radio"  autocomplete="off"/>Point
        	</label>
        	<label class="btn btn-primary" name="addType" id="btn-line" data="LineString">
        		<input type="radio" autocomplete="off"/>Line
        	</label>
        </div>
    </div>

    <div class="col-md-6" id="color-button" >
        <div class="btn-group pull-right colorpicker" role="group">
        	<input type='text' id="color-picker" />
        </div>
    </div>
</div>

