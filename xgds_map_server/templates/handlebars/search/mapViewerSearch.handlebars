
    <div id="searchContainer" style="minHeight:100px">
		<div id="message" style="color:red;" class='item auto'><br/></div>
		{{#unless hideModelChoice }}
		<div id="modelChoiceDiv" class='item auto '>
			Search for:
			<select id="searchModelSelector">
			{{#each searchModels}}
				<option value="{{this}}" {{modelSelected this ../preselectModel}}>{{this}}</option>
			{{/each}}
			</select>
			<button id="getSearchFormButton" class="btn btn-primary">Start</button>
		</div>
		{{/unless}}
		<div id="searchFormDiv" ></div>
	</div>
	
	